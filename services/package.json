{
  "name": "shepherd",
  "version": "0.1.1",
  "description": "Server that creates & maintains a strict adult content filter list.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "start": "docker-compose up --build -d",
    "logs": "docker-compose logs -f --tail=15",
    "up": "docker-compose up --build -d && docker-compose logs -f",
    "down": "docker-compose down --remove-orphans",
    "rebuild": "npm run down && npm run up",
    "psql": "docker exec -it shepherd_pgdb_1 psql -U postgres arblacklist",
    "test:grep": "mocha tests/**/*.spec.ts --grep",
    "test": "mocha tests/**/*.spec.ts"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "node-option": [
      "require=ts-node/register"
    ]
  },
  "keywords": [],
  "author": "Ros McMahon <ros@arweave.org>",
  "license": "LGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shepherd-media-classifier/shepherd.git"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.12",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.0.0",
    "sinon": "^14.0.0"
  },
  "dependencies": {
    "@slack/webhook": "^6.0.0",
    "@types/express": "^4.17.11",
    "@types/minio": "^7.0.13",
    "@types/node": "^16.11.9",
    "@types/rimraf": "^3.0.1",
    "@types/shelljs": "^0.8.9",
    "ansi-colors": "^4.1.1",
    "arca-gql": "^0.0.9",
    "arweave": "^1.11.6",
    "aws-sdk": "^2.1097.0",
    "axios": "^0.24.0",
    "cross-env": "^7.0.3",
    "csv-parse": "^5.0.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "file-type": "^16.5.3",
    "got": "^11.8.5",
    "knex": "^2.1.0",
    "knex-utils": "^5.3.2",
    "micro-memoize": "^4.0.11",
    "minio": "^7.0.32",
    "pg": "^8.6.0",
    "pg-query-stream": "^4.2.3",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "systeminformation": "^5.9.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "undici": "^5.10.0"
  }
}
